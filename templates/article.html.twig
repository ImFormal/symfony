{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <div class="container mx-auto py-8 px-4">
        <h1 class="text-3xl font-semibold text-center mb-8">Liste des Articles</h1>

        <div class="space-y-6">
            {% for article in articles %}
                <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300">
                    <h2 class="text-xl font-semibold text-gray-800">{{ article.title }}</h2>
                    <p class="text-gray-600 mt-2">{{ article.content }}</p>
                    <p class="text-sm text-gray-400 mt-4">Publi√© le : {{ article.date }}</p>
                    <div class="mt-4">
                        <a href="{{ path('app_user_article_detail', {'id': article.id}) }}" class="text-blue-500 hover:text-blue-700">Lire la suite</a>
                    </div>
                </div>
            {% else %}
                <p class="text-gray-500">Aucun article disponible.</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
