{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}

{% block body %}
    <div class="container mx-auto py-8 px-4">
        <div class="bg-white p-6 rounded-lg shadow-md">
            <h1 class="text-3xl font-semibold">{{ article.title }}</h1>
            <p class="text-gray-600 mt-4">{{ article.content }}</p>
            <p class="text-sm text-gray-400 mt-4">Publié le : {{ article.date }}</p>
        </div>

        <div class="mt-6">
            <a href="{{ path('app_user_articles') }}" class="text-blue-500 hover:text-blue-700">Retour à la liste des articles</a>
        </div>
    </div>
{% endblock %}