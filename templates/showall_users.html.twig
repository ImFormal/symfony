{% extends 'base.html.twig' %}

{% block title %}Liste des comptes{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Liste des comptes</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for account in accounts %}
                <div class="bg-white shadow-lg rounded-lg p-4" id="account-{{ account.id }}">
                    <h2 class="text-xl font-semibold">{{ account.firstname }} {{ account.lastname }}</h2>
                    <p class="text-gray-700">{{ account.email }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
