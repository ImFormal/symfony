{% extends 'base.html.twig' %}

{% block title %}Liste des articles{% endblock %}

{% block body %}
    <div class="container mx-auto p-4">
        <h1 class="text-2xl font-bold mb-4">Liste des articles</h1>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            {% for article in articles %}
            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow duration-300" id="article-{{ article.id }}">
                <h2 class="text-xl font-semibold text-gray-800">{{ article.title }}</h2>
                <p class="text-gray-600 mt-2">{{ article.content }}</p>
                    <div class="mt-4">
                        <p><strong>Auteur:</strong> {{ article.author.firstname }} {{ article.author.lastname }}</p>
                        <p><strong>Catégories:</strong> 
                            {% for category in article.categories %}
                                {{ category.name }}{% if not loop.last %}, {% endif %}
                            {% endfor %}
                        </p>
                    </div>
                    <div class="mt-4">
                        <a href="{{ path('app_article_article_detail', {'id': article.id}) }}" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700">Voir plus</a>
                    </div>
                    <p class="text-sm text-gray-400 mt-4">Publié le : {{ article.createAt | date('Y-m-d') }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}